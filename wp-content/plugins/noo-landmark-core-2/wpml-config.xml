        <custom-field action="translate">after_price</custom-field>
        <custom-field action="copy">document</custom-field>
        <custom-field action="copy">video</custom-field>
        <custom-field action="copy">address</custom-field>
        <custom-field action="copy">country</custom-field>
        <custom-field action="copy">city</custom-field>
        <custom-field action="copy">neighborhood</custom-field>
        <custom-field action="copy">zip</custom-field>
        <custom-field action="copy">state</custom-field>
        <custom-field action="copy">latitude</custom-field>
        <custom-field action="copy">longitude</custom-field>
        <custom-field action="copy">property_photo</custom-field>
        <custom-field action="copy">floor_plan</custom-field>
        <custom-field action="copy">_bedrooms</custom-field>
